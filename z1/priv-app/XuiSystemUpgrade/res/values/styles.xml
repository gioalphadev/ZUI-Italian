<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.OTA" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/OtaActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OtaActionBarButtonStyle</item>
        <item name="android:selectableItemBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="Theme.OTA1" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/OtaActionBarStyle1</item>
        <item name="android:actionOverflowButtonStyle">@style/OtaActionBarButtonStyle</item>
        <item name="android:selectableItemBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="item_divider">
        <item name="android:background">@color/divider_item</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>
    <style name="VersionTitleTextStyle">
        <item name="android:textSize">@dimen/version_title_text_size</item>
        <item name="android:textColor">@drawable/text_black_color_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="VersionDetailTextStyle">
        <item name="android:textSize">@dimen/vserion_detail_text_size</item>
        <item name="android:textColor">@color/vserion_detail_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_left_distance</item>
        <item name="android:layout_marginTop">@dimen/text_margin_top_distance</item>
        <item name="android:layout_marginRight">@dimen/text_margin_left_distance</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">1.0dip</item>
    </style>
    <style name="DownloadProgressBar">
        <item name="android:layout_marginLeft">@dimen/dwoload_bar_margin_left_distance</item>
        <item name="android:layout_marginTop">@dimen/dwoload_bar_margin_top_distance</item>
        <item name="android:layout_marginRight">@dimen/dwoload_bar_margin_left_distance</item>
        <item name="android:max">100</item>
        <item name="android:progress">0</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_small</item>
    </style>
    <style name="DownloadBtnStyle">
        <item name="android:textSize">@dimen/version_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_select</item>
        <item name="android:layout_marginLeft">@dimen/webview_page_padding</item>
        <item name="android:layout_marginRight">@dimen/webview_page_padding</item>
    </style>
    <style name="DownloadingBtnStyle">
        <item name="android:textSize">@dimen/version_title_text_size</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_downloading_select</item>
        <item name="android:layout_marginLeft">@dimen/webview_page_padding</item>
        <item name="android:layout_marginRight">@dimen/webview_page_padding</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/version_title_text_size</item>
        <item name="android:textColor">@color/text_unclickable_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_shape_unclickable</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_left_distance</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_left_distance</item>
    </style>
    <style name="ListItemContentTextStyle">
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="titleTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/welcome_background</item>
    </style>
    <style name="titleTextColor1" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/maindivider</item>
    </style>
    <style name="ListItemTitleTextStyle">
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
        <item name="android:textColor">@drawable/text_black_color_selector</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="version_item_title">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">10.0dip</item>
    </style>
    <style name="version_item_content">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">10.0dip</item>
    </style>
    <style name="main_divider">
        <item name="android:background">@color/maindivider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>
    <style name="layoutWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="toolBartitle">
        <item name="android:paddingTop">@dimen/title_padding_top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.0dip</item>
    </style>
    <style name="ErrorTextStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:drawablePadding">7.0dip</item>
    </style>
    <style name="NormalTextStyleBlack">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="OtaActionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/titleTextColor</item>
        <item name="android:homeAsUpIndicator">@drawable/action_bar_back</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <item name="android:paddingStart">6.0dip</item>
    </style>
    <style name="OtaActionBarStyle1" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/titleTextColor1</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <item name="android:paddingStart">6.0dip</item>
    </style>
    <style name="OtaActionBarButtonStyle" parent="@android:style/Widget.DeviceDefault.Light.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:src">@drawable/ic_actionbar_menu</item>
        <item name="android:minWidth">32.0dip</item>
    </style>
    <style name="OtaNotificationIconStyle">
        <item name="android:background">@drawable/ota_icon</item>
        <item name="android:layout_width">42.0dip</item>
        <item name="android:layout_height">42.0dip</item>
    </style>
    <style name="Dialog">
        <item name="android:windowBackground">@color/sort_transparent_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
