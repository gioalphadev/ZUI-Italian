<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="DialogButtonTextStyle">
        <item name="android:textSize">@dimen/bottom_btn_text_size</item>
        <item name="android:textColor">@color/noti_btn_txt</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/wifiwarning_selector_btn_circular</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="DialogActivity" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
