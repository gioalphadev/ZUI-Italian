<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="applock_fragment_sub_background">
        <item name="android:background">@color/applock_normal_bg_color</item>
    </style>

    <style name="applock_title_div_view">
        <item name="android:layout_height">2px</item>
        <item name="android:background">#1b1e24</item>
    </style>

    <style name="applock_list_empty_view">
        <item name="android:background">#000000</item>
    </style>

    <style name="applock_list_empty_view_image">
        <item name="android:layout_height">102dp</item>
        <item name="android:layout_width">126dp</item>
        <item name="android:layout_marginTop">111dp</item>
        <item name="android:contentDescription">""</item>
    </style>

    <style name="applock_list_empty_view_textview" parent="@android:style/TextAppearance.Large">
        <item name="android:maxWidth">200dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#5c5c5c</item>
    </style>

    <style name="applock_listview">
        <item name="android:cacheColorHint">#000000</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="applock_listview_item">
        <item name="android:layout_height">52dp</item>
        <item name="android:minHeight">52dp</item>
    </style>
    
     <style name="applock_listview_item_left_image">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
    
     <style name="applock_listview_item_textview">
        <item name="android:textColor">#8c8c8c</item>
        <item name="android:textSize">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="applock_div_view">
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/applock_listview_divider_color</item>      
    </style>
    <style name="applock_listview_item_div_view" parent="@style/applock_div_view">
        <item name="android:layout_marginLeft">16dp</item>
    </style>
    
   <style name="applock_listview_item_button_view">
        <item name="android:background">@drawable/applock_list_btn_selector</item>
        <item name="android:textColor">@drawable/applock_list_btn_txt_color</item>
        <item name="android:textSize">15dp</item>      
    </style>
</resources>
