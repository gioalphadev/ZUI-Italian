<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="MyTheme" />
    <style name="MyTheme.BaseTheme" parent="@style/MyTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="MyTheme.BaseTheme.Main" parent="@style/MyTheme.BaseTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="MyTheme.BaseTheme.Translucent" parent="@style/MyTheme.BaseTheme">
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="XUIScrollBarDark">
        <item name="android:scrollbarSize">7.0dip</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_bar_dark</item>
    </style>
</resources>
