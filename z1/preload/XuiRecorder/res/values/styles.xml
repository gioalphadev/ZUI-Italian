<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="NewThemeWindow" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:taskOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:taskToFrontEnterAnimation">@anim/anim_enter</item>
    </style>
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/list_check_box</item>
    </style>
    <style name="labelItemTextView">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ff8c8c8c</item>
    </style>
    <style name="transparent" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/NewThemeWindow</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:actionOverflowButtonStyle">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="NotificationDialogNoTitle" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>
